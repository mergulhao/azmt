<h1>Listing Courses</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Color</th>
  </tr>
  <%- @courses.each do |course|%>
    <tr>
      <td><%=h course.name %></td>
      <td><%=h course.color %></td>
    
      <td><%=link_to 'Show', object_url(course) %></td>
      <td><%=link_to 'Edit', edit_object_url(course) %></td>
      <td><%=link_to 'Destroy', object_url(course), :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>
<br/>

<%= link_to 'New Course', new_object_url %>