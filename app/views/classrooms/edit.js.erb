<h2>Editando Sala</h2>

<%= error_messages_for :classroom %>

<% form_remote_for(:classroom, :url => object_url, :update => "sidebar", :html => { :method => :put }) do |f| %>
  <%= render :partial => "form", :locals => { :f => f } %>
  <p>
    <%=submit_tag "Atualizar"%> &nbsp; <%= link_to_function 'Cancelar', 'clearSidebar()' %>
  </p>
<% end %>
