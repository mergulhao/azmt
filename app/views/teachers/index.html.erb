<h1>Listing Teachers</h1>

<table>
  <tr>
    <th>Name</th>
  </tr>
  <%- @teachers.each do |teacher|%>
    <tr>
      <td><%=h teacher.name %></td>
    
      <td><%=link_to 'Show', object_url(teacher) %></td>
      <td><%=link_to 'Edit', edit_object_url(teacher) %></td>
      <td><%=link_to 'Destroy', object_url(teacher), :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>
<br/>

<%= link_to 'New Teacher', new_object_url %>