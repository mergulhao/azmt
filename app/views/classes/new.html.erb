<h1>New Classe</h1>

<%= error_messages_for :classe %>

<% form_for(:classe, :url => collection_url) do |f| %>
    <%= render :partial => "form", :locals => { :f => f } %>
  
  <label>Dia inicial:</label> <%= f.date_select :start_date, :order => [:day, :month, :year] %>
  <br/>
  <label>Hora de início</label> <%= f.time_select :start_time, :minute_step => 30 %>
  <br/>
  <label>Hora de fim</label> <%= f.time_select :end_time, :minute_step => 30 %>
  <br/>
  <% options = [["Domingo", :sunday], ["Segunda", :monday], ["Terça", :tuesday], ["Quarta", :wednesday], ["Quinta", :thursday], ["Sexta", :friday], ["Sábado", :saturday]] %>
  <label>Repetir toda</label> <%= f.select :repeat_on, options %>
  <br/>
  <label>Número de aulas</label> <%= f.text_field :lessons_number %>

  <p>
    <%= submit_tag "Create" %>
  </p>
<% end %>
<br/>
<%= link_to 'Back', collection_url %>