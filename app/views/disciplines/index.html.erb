<h2>Disciplinas</h2>

<p><%= link_to image_tag('icons/file_add.png') + " Adicionar", new_object_url %></p>

<table>
  <tr>
    <th>Nome</th>
    <th>Professor</th>
    <th>Sala</th>
  </tr>
  <%- @disciplines.each do |discipline|%>
    <tr>
      <td><%=h discipline.name %></td>
      <td><%=h discipline.teacher %></td>
      <td><%=h discipline.classroom %></td>
    
      <td><%=link_to image_tag('icons/file_edit.png'), edit_object_url(discipline) %></td>
      <td><%=link_to image_tag('icons/file_delete.png'), object_url(discipline), :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>
