  </tr>
  <tr>
    <td><p><strong><%= _('E-mail') %>:</strong><%=h @student.email %></p></td>
  </tr>
  <tr>
    <td><p><strong><%= _('Profession') %>:</strong><%=h @student.work_profession %></p></td>
    <td><p><strong><%= _('Company') %>:</strong><%=h @student.work_company %></p></td>
