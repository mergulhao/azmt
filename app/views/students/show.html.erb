  </tr>
  <tr>
    <td><p><strong><%= _('Home Phone') %>:</strong><%=h @student.home_phone %></p></td>
    <td><p><strong><%= _('Comercial Phone') %>:</strong><%=h @student.comercial_phone %></p></td>
