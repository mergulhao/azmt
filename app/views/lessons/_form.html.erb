<p>
  <label for="lesson_name">Nome:</label>
  <%= f.text_field :name %>
</p>

<% unless parent_object -%>
<p>
  <label for="lesson_classe_id">Turma:</label>
  <%= f.collection_select :classe_id, Classe.find(:all), :id, :to_s %>
</p>
<% end -%>

<p>
  <label for="lesson_classroom_id">Sala:</label>
  <%= f.collection_select :classroom_id, Classroom.find(:all), :id, :name %>
</p>

<p>
  <label for="lesson_date">Come√ßo:</label>
  <%= f.date_select :date, :order => [:day, :month, :year] %>
</p>

<p>
  <label for="lesson_start_time">Inicio:</label>
  <%= f.time_select :start_time, :minute_step => 30 %>
</p>

<p>
  <label for="lesson_end_time">Fim:</label>
  <%= f.time_select :end_time, :minute_step => 30 %>
</p>
